class Cake:
    coat = "생크림"

    def __init__(self, topping, price, candels=0):
        self.topping = topping
        self.price = price
        self.candles = candles
        
    def describe(self):
        print(f"이 케익은 {self. coat}로 덮여 있습니다.")
        print(f"이 케이크의 토핑은 {self.topping}입니다.")
        print(f"이 케이크의 가격은 {self.price:,d}원입니다.")
        if self. candles > 0:
            print(f"이 케이크에는 초가 {self. candles}개 포함되어 있습니다.")

    def main():
        cake_truck = []

        cake_truck.append(Cake("눈사람 사탕", 10000))
        cake_truck.append(Cake("g한라봉", 9000,8))
        
        for cake in cake_truck:
            print(cake)
            cake.describe()


if__name__ == "__main__":
    main()
